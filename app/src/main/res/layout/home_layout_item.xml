<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="20dp"
        android:background="@drawable/layout_border">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_view"
            android:layout_margin="10dp"
            android:id="@+id/profilePic"/>

        <TextView
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="First"
            android:layout_toRightOf="@+id/profilePic"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Last"
            android:layout_toRightOf="@+id/firstName"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/visitedDate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Visited Place"
            android:layout_below="@+id/profilePic"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:text="Date &amp; Time"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_below="@+id/firstName"
            android:textSize="10dp"
            android:textStyle="normal"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/visitedPlace"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Visited Date"
            android:layout_below="@id/visitedDate"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Description"
            android:textSize="17dp"
            android:layout_below="@id/visitedPlace"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/image1"
            android:layout_below="@id/description"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/image2"
            android:layout_below="@id/image1"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>